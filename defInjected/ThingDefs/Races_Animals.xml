<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
  
  <ThingDef Name="BasePawn" Abstract="True">
    <eType>Pawn </eType>
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <useStandardHealth>false</useStandardHealth>
    <flammability>1.0</flammability>
    <hasTooltip>true</hasTooltip>
    <soundBulletHit>BulletImpactFlesh</soundBulletHit>
    <inspectorTabs>
      <li>ITab_Pawn_Thoughts</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_Prisoner</li>
      <li>ITab_Pawn_Gear</li>
      <li>ITab_Pawn_Character</li>
    </inspectorTabs>
    <drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>


  <ThingDef ParentName="BasePawn" Name="BaseAnimal" Abstract="True">
    <race>
      <hasStory>false</hasStory>
      <needsRest>false</needsRest>
      <minFoodQuality>Plant</minFoodQuality>
      <isFlesh>true</isFlesh>
      <hasGenders>true</hasGenders>
    </race>
  </ThingDef>



  <!-- ============================ Animals ========================== -->

  <ThingDef ParentName="BaseAnimal">
    <defName>Muffalo</defName>
    <label>Muffalo</label>
    <description>A large herding herbivore descended from buffalo and adapted for some exotic environment. Peaceful unless disturbed.</description>
    <maxHealth>160</maxHealth>
    <overdraw>true</overdraw>
    <sunShadowInfo>
      <baseWidth>0.6</baseWidth>
      <baseHeight>0.6</baseHeight>
      <tallness>0.6</tallness>
    </sunShadowInfo>
    <targetHitChanceFactor>2.0</targetHitChanceFactor>
    <race>
      <thinkTree>HerbivoreHerd</thinkTree>
      <walkSpeed>0.47</walkSpeed>
      <meleeDamage>10</meleeDamage>
      <hungerThreshold>80</hungerThreshold>
      <bodySize>1.8</bodySize>
      <diet>Herbivorous</diet>
      <wildBiomes>
        <li>XericShrubland</li>
      </wildBiomes>
      <soundCallIntervalRange>
        <min>3500</min>
        <max>6000</max>
      </soundCallIntervalRange>
      <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
      <soundDeath>Pawn_Muffalo_Death</soundDeath>
      <soundCall>Pawn_Muffalo_Call</soundCall>
      <soundAngry>Pawn_Muffalo_Angry</soundAngry>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
  </ThingDef>


  <ThingDef ParentName="BaseAnimal">
    <defName>Squirrel</defName>
    <label>Squirrel</label>
    <description>One of the many hardy, versatile rodent species that follows humankind everywhere it spreads.</description>
    <maxHealth>25</maxHealth>
    <overdraw>false</overdraw>
    <targetHitChanceFactor>0.6</targetHitChanceFactor>
    <race>
      <thinkTree>HerbivoreStandard</thinkTree>
      <walkSpeed>1.30</walkSpeed>
      <meleeDamage>3</meleeDamage>
      <hungerThreshold>80</hungerThreshold>
      <bodySize>0.1</bodySize>
      <diet>Herbivorous</diet>
      <wildBiomes>
        <li>XericShrubland</li>
      </wildBiomes>
      <soundWounded>Pawn_Rodent_Wounded</soundWounded>
      <soundDeath>Pawn_Rodent_Death</soundDeath>
      <soundCall>Pawn_Rodent_Call</soundCall>
      <soundAngry>Pawn_Rodent_Angry</soundAngry>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
  </ThingDef>


  <ThingDef ParentName="BaseAnimal">
    <defName>Boomrat</defName>
    <label>Boomrat</label>
    <description>Either by deliberate genetic weaponization, or as an unusual defense mechanism, these rodent-like creatures create a powerful fire-starting explosion when killed.</description>
    <maxHealth>45</maxHealth>
    <overdraw>false</overdraw>
    <targetHitChanceFactor>0.6</targetHitChanceFactor>
    <race>
      <thinkTree>HerbivoreStandard</thinkTree>
      <walkSpeed>1.20</walkSpeed>
      <meleeDamage>5</meleeDamage>
      <hungerThreshold>80</hungerThreshold>
      <deathActionType>ExplodeFlame</deathActionType>
      <bodySize>0.2</bodySize>
      <diet>Omnivorous</diet>
      <wildBiomes>
        <li>XericShrubland</li>
      </wildBiomes>
      <soundWounded>Pawn_Boomrat_Wounded</soundWounded>
      <soundDeath>Pawn_Boomrat_Death</soundDeath>
      <soundCall>Pawn_Boomrat_Call</soundCall>
      <soundAngry>Pawn_Boomrat_Angry</soundAngry>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
  </ThingDef>



</ThingDefs>