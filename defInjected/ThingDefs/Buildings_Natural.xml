<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="BuildingNaturalBase" Abstract="True">
		<category>Building</category>
		<selectable>true</selectable>
		<drawerType>MapMeshOnly</drawerType>
	</ThingDef>


	<ThingDef ParentName="BuildingNaturalBase" Abstract="True" Name="RockBase">
		<eType>Rock</eType>
		<thingClass>Mineable</thingClass>
		<linkDrawerType>CornerFiller</linkDrawerType>
		<altitudeLayer>BuildingTall</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<neverMultiSelect>true</neverMultiSelect>
		<rotatable>false</rotatable>
		<saveCompressible>true</saveCompressible>
		<leaveTerrain>RoughStone</leaveTerrain>
		<filthLeavings>
			<li>
				<thingDef>RockRubble</thingDef>
				<count>2</count>
			</li>
		</filthLeavings>
		<holdsRoof>true</holdsRoof>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<mineable>true</mineable>
    <building>
      <naturalBuilding>true</naturalBuilding>
      <mineableSoundMined>CollapseRock</mineableSoundMined>
    </building>
  </ThingDef>


  <ThingDef ParentName="RockBase">
    <defName>Rock</defName>
    <label>Rock</label>
    <texturePath>Things/Building/Linked/Rock_Atlas</texturePath>
    <linkFlags>
      <li>Rock</li>
      <li>MapEdge</li>
    </linkFlags>
    <coversFloor>true</coversFloor>
    <maxHealth>500</maxHealth>
    <description>Divides and encloses rooms. Mine to remove.</description>
    <building>
      <mineableThing>ChunkRock</mineableThing>
      <mineableDropChance>0.15</mineableDropChance>
    </building>
  </ThingDef>

  <ThingDef ParentName="RockBase">
    <defName>CollapsedRocks</defName>
    <label>Collapsed rocks</label>
    <linkDrawerType>None</linkDrawerType>
    <texturePath>Things/Building/Natural/CollapsedRocks</texturePath>
    <maxHealth>500</maxHealth>
    <description>Rocks, collapsed and packed tight enough to hold a roof.</description>
    <rotatable>true</rotatable>
    <overdraw>true</overdraw>
  </ThingDef>


  <ThingDef ParentName="RockBase">
    <defName>Mineral</defName>
    <label>Mineral</label>
    <texturePath>Things/Building/Linked/Mineral_Atlas</texturePath>
    <linkFlags>
      <li>Rock</li>
      <li>MapEdge</li>
    </linkFlags>
    <maxHealth>1500</maxHealth>
    <description>Mine this for metal.</description>
    <building>
      <mineableThing>Metal</mineableThing>
      <mineableYield>35</mineableYield>
      <mineableNonMinedEfficiency>0.8</mineableNonMinedEfficiency>
    </building>
	</ThingDef>










	<ThingDef ParentName="BuildingNaturalBase">
		<category>Ethereal</category>
		<eType>SteamGeyser</eType>
		<label>Steam geyser</label>
		<defName>SteamGeyser</defName>
		<thingClass>SteamGeyser</thingClass>
		<texturePath>Things/Building/Natural/SteamGeyser</texturePath>
		<baseMaterialType>Transparent</baseMaterialType>
		<altitudeLayer>Floor</altitudeLayer>
		<destroyable>false</destroyable>
		<useStandardHealth>false</useStandardHealth>
		<tickerType>Normal</tickerType>
		<selectable>true</selectable>
		<description>Natural steam source.</description>
		<size>(2,2)</size>
		<overdraw>true</overdraw>
		<beauty>Gorgeous</beauty>
		<neverOverlapFloors>true</neverOverlapFloors>
	</ThingDef>


</ThingDefs>